# Flow Grid - Multi-tenant SaaS Configuration
# Copy this to .env.local and customize for your environment

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/flowgrid"
DIRECT_URL="postgresql://username:password@localhost:5432/flowgrid"

# Supabase (Alternative to local PostgreSQL)
# DATABASE_URL="postgresql://postgres:[PASSWORD]@[HOST]:[PORT]/postgres"
# DIRECT_URL="postgresql://postgres:[PASSWORD]@[HOST]:[PORT]/postgres"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-jwt-key-change-in-production"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Email Service (Resend)
RESEND_API_KEY=""
FROM_EMAIL="noreply@flowgrid.com"

# Redis (Upstash) for passkeys & rate limiting
UPSTASH_REDIS_REST_URL="" # Required for WebAuthn challenge storage
UPSTASH_REDIS_REST_TOKEN="" # Required for WebAuthn challenge storage

# WebAuthn (Passkeys)
WEBAUTHN_RP_ID="tryflowgrid.com" # Use apex domain in production, override to "localhost" for local dev
WEBAUTHN_RP_NAME="Flow Grid"

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_MARKETING_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Flow Grid"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_CUSTOM_DOMAINS="false"

# File Upload (Optional - Supabase Storage or AWS S3)
SUPABASE_URL=""
SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_KEY=""

